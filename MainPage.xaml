<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

    <VerticalStackLayout>
        <Label Text="Total da conta"/>
        <Entry x:Name="BillInput" Placeholder="Insira o valor" Keyboard="Numeric"/>
        <Label Text="Gorjeta"  />
        <Label x:Name="tipOutput" Text="0.00" />

        <Label Text="Total" />
        <Label x:Name="totalOutput" Text="0.00" />

        <Label Text="Porcentagem de gorjeta" />
        <Label x:Name="tipPercent" Text="15%" />
        <Slider x:Name="tipPercenteSlider" Minimum="0" Maximum="100" Value="15" />

        <Button Text="15%" Clicked="OnNormalTip"/>
        <Button Text="20%" Clicked="OnGenerousTip"/>

        <Button x:Name="roundDown" Text="Arredondar para Baixo" />
        <Button x:Name="roundUp" Text="Arredondar para Cima" />
    </VerticalStackLayout>
    
</ContentPage>
